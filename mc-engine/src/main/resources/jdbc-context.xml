<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mcDataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${mc.jdbc.driver.class.name}" />
        <property name="url" value="${mc.jdbc.url}" />
        <property name="username" value="${mc.jdbc.username}" />
        <property name="password" value="${mc.jdbc.password}" />
    </bean>

</beans>
